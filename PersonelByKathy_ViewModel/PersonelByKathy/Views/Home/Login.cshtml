@model PersonelByKathy.Models.User
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin", @role = "form" }))
{
    <h2 class="form-signin-heading">Please sign in</h2>
    @Html.TextBoxFor(u => u.UserName, new { @class="form-control",placeholder="User Name", required="",autofocus="" })
    @Html.PasswordFor(u => u.Password, new {@class="form-control",placeholder="Password",required="" })
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
}