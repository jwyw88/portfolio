@model JSpaLasalle.ViewModel.ProductListViewModel

@{
    ViewBag.Title = "List";
}

<div class="container">

    <div class="row">

        <div class="col-md-3">
            <p class="lead">Categories</p>
            <div class="list-group">
                @Html.ActionLink("All", "List", "Product", null, new { @class = "list-group-item"})

                @foreach (var cat in Model.Categories)
                {
                    @Html.RouteLink(cat.Name, new {
                            controller = "Product",
                            action = "List",
                            category = cat.Name
                        }, new {
                            @class = "list-group-item"
                        }
                    )
                }
                @*@Html.Action("Menu", "CatNav");*@
            </div>
        </div>

        <div class="col-md-9">

            <div class="row">
                @foreach(var prod in Model.Products) 
                {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img src=@prod.PictureName alt="Product Picture">
                        <div class="caption">

                            <h4>
                                @Html.ActionLink(@prod.Name, "Details", new { id=prod.ProductId})</h4>                            <h4>@prod.Price.ToString("c")</h4>
                            <p>@prod.Description</p>
                            @*<p>Category: @prod.CategoryId.ToString()</p>*@
                        </div>
                        </div>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
