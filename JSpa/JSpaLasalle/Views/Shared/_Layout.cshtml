<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/detailPage/css")
    @Styles.Render("~/cart/css")
    @Styles.Render("~/OrderManagement/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@


</head>
<body>
    @Html.Partial("_LoginPartial")

    <div id="card">
       <img src="/images/card.png" alt="Business Card" />
        @Html.Action("Summary", "Cart")
    </div> 

    <div class="navbar navbar-inverse">
     
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="http://jspalasalle.ca/">Home</a></li>
                <li><a href="http://jspalasalle.ca/escape/">Luxury Packages</a></li>
                <li><a href="http://jspalasalle.ca/skin-care/">Treatments</a></li>
                <li><a href="http://jspalasalle.ca/monthly-special/">Monthly Special</a></li>
                <li>@Html.ActionLink("Product", "List", "Product")</li>
                <li><a href="http://jspalasalle.ca/gallery/">Gallery</a></li>

                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Roles Admin", "Index", "RolesAdmin")</li>
                    <li>@Html.ActionLink("Users Admin", "Index", "UsersAdmin")</li>
                    <li>@Html.ActionLink("Product Management", "Index", "ProductManagement")</li>
                    <li>@Html.ActionLink("Order Management", "Index", "OrderManagement")</li>
                }
            </ul>
            @*<div id="cart">
                <img src="/images/cart.png" width="35" height="24" alt="Shopping Cart" style="float:right" />
            </div>*@
        </div>

        
    </div>

   
    <!-- JavaScript -->

    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - JSpaLasalle</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
