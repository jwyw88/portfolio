@model IEnumerable<StevesHeadlines.Models.Story>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Posted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td class="col_control">
                @Html.ActionLink("Edit", "Edit", new { id = item.StoryId }) |               
               
                @{string testString = item.Title.Replace(' ', '-'); }
                @Html.RouteLink(
                    linkText: "Details",
                    routeName: "story",
                    routeValues: new
                    {
                        year = item.Posted.ToString("yyyy"),
                        month = item.Posted.ToString("MM"),
                        day = item.Posted.ToString("dd"),
                        title = testString
                    })


                @Html.ActionLink("Delete", "Delete", new { id = item.StoryId })
            </td>
        </tr>
    }

</table>
